#!/usr/bin/env bash

# Reference:
# https://evanhahn.com/scripts-i-wrote-that-i-use-all-the-time/
# https://codeberg.org/EvanHahn/dotfiles/src/branch/main/home/bin/bin/copy
#
# Usage:
# 1. Copy the output of a command: `run_some_command | copy`
# 2. Copy a file's contents: `copy < file.txt`

set -e
set -u

if hash pbcopy 2>/dev/null; then
    exec pbcopy
elif hash xclip 2>/dev/null; then
    exec xclip -selection clipboard
elif hash putclip 2>/dev/null; then
    exec putclip
else
    rm -f /tmp/clipboard 2> /dev/null
    if [ $# -eq 0 ]; then
        cat > /tmp/clipboard
    else
        cat "$1" > /tmp/clipboard
    fi
fi
