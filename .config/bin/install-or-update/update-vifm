#!/usr/bin/env bash

cd ~/gitrepos/vifm

# Fetch
echo -e "\nFetching...\n"
git fetch

if [[ -n $(git --no-pager log HEAD..origin/master) ]]; then

  # Show all commits ahead
  git --no-pager log HEAD..origin/master

  echo -e "\n"
  read -p "Press ENTER to continue to merge and build..."

  # Merge
  echo -e "\nMerging...\n"
  git merge

  # Build
  echo -e "\nBuilding...\n"
  ./scripts/fix-timestamps
  ./configure --without-gtk
  make
  sudo make install

  echo -e "\nVifm update finished.\n"

else
  echo "Vifm is already update to date."
fi

