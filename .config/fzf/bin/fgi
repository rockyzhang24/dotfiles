#!/usr/bin/env bash

# MNEMONIC: [F]uzzy search [G]it [I]gnore
# SYNOPSIS: fgi [PARAM]
#   [PARAM] is a comma separated list of ignore profiles. (ref: https://docs.gitignore.io/use/command-line)
#   If [PARAM] is ommited choose interactively.
# DESCRIPTION: Create a gitignore file from gitignore.io

api="command curl -sL https://www.toptal.com/developers/gitignore/api"

if  [ "$#" -eq 0 ]; then
  IFS+=","
  for item in $($api/list); do
    echo "$item"
  done | fzf --multi --ansi --prompt="GitIgnore> " --preview "$api/{} | bat -p -l gitignore --color=always" | paste -s -d "," - |
  { read result && $api/"$result"; }
else
  eval "$api/$@"
fi
