[user]
    name = Rocky Zhang
    email = yzhang.rocky@gmail.com
[core]
    excludesfile = /Users/rockyzhang/.gitignore_global
    pager = delta
    commentchar = ";"
    editor = nvim
[init]
    defaultBranch = main
[commit]
    verbose = true
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[push]
    autoSetupRemote = true
[alias]
    lg = log --all --color --graph --abbrev-commit --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold dim blue)<%an>%Creset'
    r = rebase -i origin/main
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    hyperlinks = true
    features = side-by-side line-numbers decorations interactive
    syntax-theme = Coldark-Cold
[delta "line-numbers"]
    line-numbers = true
[delta "decorations"]
    file-decoration-style = none
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
[delta "interactive"]
    keep-plus-minus-markers = false
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[credential]
    helper = osxkeychain
; Use neovim as git diff and merge tool
[diff]
    tool = nvimdiff
    ; For git's "--color-moved" feature. Ref: https://dandavison.github.io/delta/color-moved-support.html
    colorMoved = plain
    algorithm = histogram
    renames = true
[difftool]
    prompt = false
[difftool "nvimdiff"]
    ; Nvim plugin nvim.difftool has a command DiffTool that supports directories comparasion
    ; Ref: https://github.com/neovim/neovim/commit/fec02ae8e411658a5f97291ac9d7cf7426f1fcbf
    cmd = nvim -c "packadd nvim.difftool" -c "DiffTool $LOCAL $REMOTE"
[merge]
    tool = nvimdiff
    ; Reference on zdiff3: https://ductile.systems/zdiff3/
    conflictStyle = zdiff3
[mergetool]
    prompt = true
[mergetool "nvimdiff"]
    cmd = nvim -c \"Gvdiffsplit!\" \"$MERGED\"
