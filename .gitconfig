[user]
  name = Rocky Zhang
  email = yzhang.rocky@gmail.com
[alias]
  cm = commit
  st = status
  br = branch
[core]
  excludesfile = /Users/rockyzhang/.gitignore_global
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  hyperlinks = true
  features = side-by-side line-numbers decorations interactive
  syntax-theme = Visual Studio Dark+
  plus-style = syntax "#373d29"
  plus-emph-style = syntax "#386229"
  minus-style = syntax "#4b1818"
  minus-emph-stype = syntax "#781212"
  ; For git's "--color-moved" feature. Ref:
  ; https://dandavison.github.io/delta/color-moved-support.html
  map-styles = \
    bold purple => syntax "#271344", \
    bold cyan => syntax "#0d3531", \
    bold blue => syntax "#002f4e", \
    bold yellow => syntax "#996214"
[delta "line-numbers"]
  line-numbers = true
  line-numbers-zero-style = "#858585"
  line-numbers-minus-style = "#f14c4c"
  line-numbers-plus-style = "#487e02"
  line-numbers-left-style = "#444444"
  line-numbers-right-style = "#444444"
[delta "decorations"]
  file-style = "#ffffff" bold ul
  file-decoration-style = none
  hunk-header-decoration-style = "#444444" box ul
[delta "interactive"]
  keep-plus-minus-markers = false
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential]
  helper = osxkeychain
; Use neovim as git diff and merge tool
[diff]
  tool = nvimdiff
  colorMoved = default
[difftool]
  prompt = false
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[mergetool]
  prompt = true
[mergetool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"
